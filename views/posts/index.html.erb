  <body>
    <h1> Posts </h1>
    <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <h3><%= post.author %></h3>
      <p><%= post.body %></p>
      <%= link_to 'Show post', post_path(post) %>
      <p><%= link_to 'New Post', new_post_path %></p>
    <% end %>
  </body>
</html>
